--smart-case
--sort-files
--follow
--pager=less -F -R

--ignore-dir=tmp
--ignore-dir=bak
--ignore-dir=old
--ignore-dir=log
--ignore-dir=.vim/bundle
--ignore-dir=.vim/dein
--ignore-dir=.vim/dict
--ignore-dir=zsh-completions

--ignore-file=is:tags
--ignore-file=match:/\.log$/
--ignore-file=match:/\.diff$/
--ignore-file=match:/\.dat$/

--type-set=coffee=.coffee
--type-set=javascript=.json
--type-set=markdown=.md,.mdown,.markdown
--type-add=php=.inc
--type-add=ruby=.haml,.rake,rakefile,Rakefile,.rsel,.builder
--type-set=sass=.sass,.scss
--type-set=tags=tags
